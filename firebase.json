{
  "hosting": {
    "public": "dist/apps/wizdm",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "!(/assets/**)",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {
    "rules": "./rules/firestore.rules",
    "indexes": "./rules/firestore.indexes.json"
  },
  "storage": {
    "rules": "./rules/storage.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}
