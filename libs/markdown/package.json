{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@wizdm/markdown",
  "description": "Markdown renderer for Angular",
  "version": "1.0.0",
  "license": "MIT",
  "keywords": ["Angular", "Markdown"],
  "homepage": "https://wizdm.io/docs/content/markdown",
  "dependencies": {
    "path": "^0.12.7",
    "remark-align": "^1.2.13",
    "remark-parse": "^8.0.2",
    "remark-sub-super": "^1.0.19",
    "unified": "^9.0.0"
  },
  "peerDependencies": {
    "@angular/common": "^9.1.7",
    "@angular/core": "^9.1.7",
    "@wizdm/emoji": "^1.0.0",
    "@wizdm/prism": "^1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wizdmio/wizdm/tree/master/libs/markdown"
  },
  "bugs": {
    "url": "https://github.com/wizdmio/wizdm/issues"
  },
  "ngPackage": {
    "dest": "../../dist/libs/markdown",
    "lib": {
      "entryFile": "src/index.ts",
      "umdModuleIds": {
        "@wizdm/prism": "wizdm-prism",
        "@wizdm/emoji/text": "wizdm-emoji-text",
        "@wizdm/emoji/names": "wizdm-emoji-names",
        "remark-parse": "remark-parse",
        "remark-align": "remark-align",
        "remark-sub-super": "remark-sub-super",
        "unified": "unified"
      }
    },
    "whitelistedNonPeerDependencies": [
      "path", 
      "remark-align", 
      "remark-parse", 
      "remark-sub-super", 
      "unified"
    ]
  }
}
