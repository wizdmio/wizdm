{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "app/*": ["apps/wizdm/src/app/*"],
      "@wizdm/actionlink": ["libs/actionlink/src/index.ts"],
      "@wizdm/animate": ["libs/animate/src/index.ts"],
      "@wizdm/content": ["libs/content/src/index.ts"],
      "@wizdm/connect": ["libs/connect/src/index.ts"],
      "@wizdm/connect/*": ["libs/connect/src/lib/*"],
      "@wizdm/dialog": ["libs/dialog/src/index.ts"],
      "@wizdm/teleport": ["libs/teleport/src/index.ts"],
      "@wizdm/redirect": ["libs/redirect/src/index.ts"],
      "@wizdm/elements/*": ["libs/elements/src/lib/*"],
      "@wizdm/markdown": ["libs/markdown/src/index.ts"],
      "@wizdm/markdown/*": ["libs/markdown/src/lib/*"],
      "@wizdm/prism": ["libs/prism/src/index.ts"],
      "@wizdm/prism/*": ["libs/prism/src/lib/*"],
      "@wizdm/editable": ["libs/editable/src/index.ts"],
      "@wizdm/editable/*": ["libs/editable/src/lib/*"],
      "@wizdm/doorbell": ["libs/doorbell/src/index.ts"],
      "@wizdm/doorbell/*": ["libs/doorbell/src/lib/*"],
      "@wizdm/paypal": ["libs/paypal/src/index.ts"],
      "@wizdm/stripe": ["libs/stripe/src/index.ts"],
      "@wizdm/ipinfo": ["libs/ipinfo/src/index.ts"],
      "@wizdm/ipinfo/*": ["libs/ipinfo/src/lib/*"],
      "@wizdm/gtag": ["libs/gtag/src/index.ts"],
      "@wizdm/emoji": ["libs/emoji/src/index.ts"],
      "@wizdm/emoji/*": ["libs/emoji/src/lib/*"],
      "@wizdm/readme": ["libs/readme/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", ".tmp", ".experiments"]
}
